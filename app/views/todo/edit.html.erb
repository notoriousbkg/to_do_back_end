<div class="show-page">
  <h2 class="task-details">Edit To-Do</h2>

  <form action=/todo/update/<%= @todo.id %>>
    
    <h3 class="show-headers">Task</h3>
          <p>
              <input class="text-input" name='task' type="text" value="<%= @todo.task %>">
          </p>
          <h3 class="show-headers">Time</h3>
          <p>
              <input class="text-input" name='time' step="5" type="number" value="<%= @todo.time %>">
          </p>
          <h3 class="show-headers">Days Till Due</h3>
          <p>
              <input class="text-input" name='days' type="number" value="<%= @todo.days %>">
          </p>
          <h3 class="show-headers">Description</h3>
          <p>
              <input class="text-input" name='description' type="text" value="<%= @todo.description %>">
          </p>
    <input class="button add-new-todo-button" type="submit" value="Edit todo" id="Delete">
    <a href="/todo/index" id="Delete">Go back to Index</a>
  </form>
</div>
