    <div class="to-do-page">
        <h1 class="to-do-header">
            To-Do List
        </h1>
        <p>
            
        </p>

         <ul class="to-do-list">
         <% @todos.each do |todo| %>
             <li>
                 <input type="checkbox">
                 <style>
                 .minutes {
                    text-decoration: none;
                    color: #000;
                 }
                 </style>
                 <a href="show/<%= todo.id %>"><%= todo.task %></a>
                 <span class="minutes"><a href="show/<%= todo.id %>"><%= todo.time %> minutes</a></span>
                 <span class="days-till-due"><%= todo.days %> day(s)</span>
                 
             </li>
         <% end %>
         </ul>
         
         
         
         <p class="button">
            <div style="text-align:center;">
            <form action="AddTask.html">
            <input id="add-a-to-do" type="submit" value="Add To-Do">
            </form>
            </div>
         </p>
         
    </div>